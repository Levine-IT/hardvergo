{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!node_modules",
      "!**/*.gen.*",
      "!**/*.d.ts",
      "!**/*.d.mts",
      "!**/*.d.cts",
      "!**/*.d.tsx",
      "!**/*.d.jsx",
      "!**/dist/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/out/**",
      "!**/lib/**",
      "!**/*.yaml",
      "!**/.next/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "off"
      },
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    },
    "parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
